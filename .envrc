export DEVELOPER_DIR=/Applications/Xcode-16.1.app

# Unset Android NDK compiler variables for iOS builds
unset CC
unset CXX

# Remove Android NDK toolchain from PATH to prevent Xcode from using Android compilers
if [[ ":$PATH:" == *":$ANDROID_NDK/toolchains/"* ]]; then
  export PATH=$(echo "$PATH" | tr ':' '\n' | grep -v "$ANDROID_NDK/toolchains" | tr '\n' ':' | sed 's/:$//')
fi
